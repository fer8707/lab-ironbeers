<!-- views/partials/beerPartial.hbs -->

<div class="col-md-4">
  <div class="card">
    <img class="card-img-top" src="{{this.image_url}}" alt="{{this.name}}"/>
    <div class="card-body">
      <a href="/beer/{{this.id}}"><h5 class="card-title">{{this.name}}</h5></a>
      <p class="card-text">{{this.description}}</p>
      <p class="card-text">{{this.tagline}}</p>
    </div>
  </div>
</div>